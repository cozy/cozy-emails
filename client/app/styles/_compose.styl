/*
  new email window
*/
#email-compose
    width 100%
    max-width 800px

    &.enable
        display block

    h3
        color #444
        margin-top 0
        padding-top 1em
        margin-bottom 2em

    a.close-email
        margin-right 0

    a.expand
        float right
        font-size 1em

  .editor,
  .rt-editor
    border 1px solid #444
    min-height 16em
    max-height 24em
    overflow auto
    height auto
    width 100%
    text-align left
    color black

  .attachements
      margin 1em 0

  .contact-group
    margin-top: .5em

  .compose-toggle
    float right

    a
      padding 0 1em


  .btn-contact
      float right
      width 3em
      margin-left 1em

  textarea.compose-input
      position relative
      height 2em
      padding 0.2em 0.5em
      overflow hidden
      width calc(100% - 4em)
      max-width 750px
      display inline
      resize none

  .compose-from
    line-height 2em
    color darkcolor
    cursor pointer

    .caret
        margin-left 0.5em

  .compose-cc,
  .compose-bcc
    display none

  .compose-cc.shown,
  .compose-bcc.shown
    display inherit

  .address-tag
      border 1px solid mediumcolor
      background-color lightcolor
      margin 0 .25em .25em .25em
      padding .25em
      border-radius .25em
      display inline-block

      a
        font-size .75em
        padding-left .5em
