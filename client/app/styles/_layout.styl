.app
    display     flex
    width       100vw
    height      100vh
    align-items stretch
    overflow    hidden

    .drawer-toggle
        display none

    main
        position    relative
        flex        1
        display     flex
        align-items stretch

    aside
    section
        overflow-y auto


    @media(max-width: 29.9375em)
        [role=menubar][aria-expanded=true] + main
            transform translateX(85vw)

        main
            position absolute
            top      0
            left     0
            width    100%
            height   100%

        .messages-list
            .drawer-toggle
                display block


    @media(max-width: 47.9375em)
        main
            section
                position absolute
                top      0
                left     100%
                width    100%
                height   100%

            & :first-of-type
                left 0

                & + [aria-expanded=true]
                    transform translateX(-100%)

        // set rules for drawer
        [role=menubar][aria-expanded=true]
            min-width 85vw

            + main section
                width 100vw


    @media(min-width: 30em)
        [role=menubar]
            .drawer-toggle
                display block


    @media(min-width: 48em)
        main
            section
                transition flex 180ms ease-in

            &.full :first-of-type
                flex-basis 100% !important

                & + [aria-expanded=false]
                    flex 0


            .layout-column &
                flex-direction row

            .layout-row &
                flex-direction column

            .layout-row-reverse &
                flex-direction column-reverse

            for ratio in (20..80)
                .layout-preview-{ratio} &
                    section:nth-child(1)
                        flex 100 - ratio
                    section:nth-child(2)
                        flex ratio


    @media(min-width: 80em)
        .layout-column &
            section
                max-width 38em
            .conversation[aria-expanded=true]
                max-width none
