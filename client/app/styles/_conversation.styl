/*
  Conversation

  -- List of collapsable message content
*/

.conversation

    &.enable
        display block

    h3
        color #444
        margin-top 0
        padding-bottom .5em

        .close-conversation
            display none
            cursor pointer
            margin-left 1em

        .expand
            font-size 0.75em
            float right

        .expand
        .close-conversation
            color basecolor
            &:hover
                color actioncolor

    .conversation-length-msg
        height 2em
        line-height 1.8em
        font-size 1.2em
        background #f4f4f4
        cursor pointer
        border 0
        padding 0 1rem
        a
            color black
        &:hover
            background-color orange

    .message-title
        margin-bottom 0.5em
        line-height 1.4em
        border 0


    .thread
        padding 0

        .message
            border 0
            padding 0 1rem
            cursor pointer
            background #f4f4f4

            &:hover
                border-left: 0

            &.active
                background white
                cursor default
                border 0

                .preview
                    display block
                .content
                    display block


            .messageToolbox
            .messageNavigation

                .btn-toolbar
                    margin-right .5em
                    padding-top 1em
                    margin-bottom 1em
                    border-top 1px solid #CCC

            .messageToolbox
                margin-top 1em

                .btn.btn-default
                    background none
                    box-shadow none
                    border 0
                    color basecolor
                    transition color 0.3s ease
                    font-size 14px

                    &:hover
                        color actioncolor

                    &:active
                        color actioncolor - 10%


                .btn.btn-default.reply
                    color contrastcolor

                    &:hover
                        color actioncolor

                    &:active
                        color actioncolor - 10%

            .messageNavigation
                margin-bottom 0

                .btn.btn-default
                    background none
                    box-shadow none
                    border 0
                    color basecolor
                    transition color 0.3s ease

                    &:hover
                        color actioncolor

                .btn.btn-default.prev
                    text-align left

                .btn.btn-default.next
                    text-align right

            .messageToolbox .tool-long
                display none

            .preview
            .content
                margin .5em .25em
                padding .5em
                border 0
                background-color white

                body
                    font-family 'Source Sans Pro', sans-serif

            .header
                display flex
                padding 0 .25em
                justify-content flex-start
                align-items center
                font-size 14px
                border 0

            .sender-avatar
                display block
                float left
                margin 0 .5em 0 0
                font-size 2em
                width 2em
                height 2em
                line-height 2em
                color #aaa
            i.sender-avatar
                padding 0 .5em
            .toggle-headers
                padding 0 1em
                color mediumcolor
                cursor pointer
            .header.compact
                outline none
                display flex
                justify-content flex-start
                align-items center
                .participants
                .subject
                    margin 0 .5em
                    overflow hidden
                    text-overflow ellipsis
                    max-width 50%
                    max-height 5em
                .hour
                    margin-left auto
                    color darkcolor
                    white-space pre
                .flags
                    width 3em

                .attach
                    display none
                .fav
                    color #FF0
                    display none
                .sender-avatar
                    font-size 2em
                    width 1em
                    height 1em
                    line-height 1em
                    padding 0 2px

            .header.compact.has-attachments .attach
            .header.compact.is-fav .fav
                  display inline
                  padding 0 .5em

            .toggle-active
                position relative
                top 0
                right 0
                align-self flex-start
                margin 0
                padding .25em
                background-color white
                border-style solid
                border-color mediumcolor
                border-width 0 0 1px 1px

            .participants
                color darkcolor
                &.receivers
                    color mediumcolor

            .content-action
                background-color lightred
                margin .5em 0
                padding 0.5em
                color #333

                button
                    margin 0 1em

            .subject
                display none

            .content
                white-space pre-line
                margin 0 0 0 0
                display none
                width 100%

            .preview
                overflow hidden
                white-space pre-line
                text-overflow ellipsis
                color darkcolor // for ellipsis + p
                font-family "Source Sans Pro"

                .quote1
                    color blue
                .quote2
                    color red
                .quote3
                    color green
                .quote4
                    color magenta
                .quote5
                    color blue

                p
                    margin 0
                    display inline


            .hour
                margin-left auto
                color darkcolor
                white-space pre

            &:hover:not(.active)
                background #f4f4f4

    .full-headers
        display none

    .with-headers
        .full-headers
            display block

    .att-preview
    .att-preview img
        padding 0.5em
    .att-preview button
        margin .5em

    #email-compose
        margin-top 2em
        padding-top 1em
        padding-bottom 1em
        border-top 1px solid #CCC
        border-bottom 1px solid #CCC

